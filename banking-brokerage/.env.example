# Banking Brokerage Mock API Environment Configuration
# Copy this file to .env and modify as needed

# Server Configuration
PORT=3001
NODE_ENV=development
LOG_LEVEL=info
API_VERSION=v1

# API URL Configuration
# Base URL - overrides automatic URL generation based on environment
# Leave empty for automatic URL generation
# BASE_URL=https://your-domain.com/api/v1

# Reverse Proxy Configuration
# Set to true if running behind a reverse proxy (nginx, Traefik, etc.)
TRUST_PROXY=false

# CORS Configuration
# Comma-separated list of allowed origins, or * for all
ALLOWED_ORIGINS=*

# Examples for different deployment scenarios:
# Local development: (leave BASE_URL empty)
# Docker Compose: BASE_URL=http://banking-brokerage:3001/api/v1
# Behind reverse proxy: BASE_URL=https://api.yourdomain.com/brokerage/v1, TRUST_PROXY=true
# Cloud deployment: BASE_URL=https://your-cloud-url.com/api/v1
