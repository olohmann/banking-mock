# Azure Deployment Configuration
# Copy this file to .env and customize the values

# Azure Configuration
AZURE_RESOURCE_GROUP=rg-banking-mock
AZURE_LOCATION=northeurope
ACR_NAME_PREFIX=acrbankingmock

# Container Configuration
BANKING_ASSISTANT_PORT=3001
BANKING_BROKERAGE_PORT=3002

# Container Resources
CONTAINER_CPU=1
CONTAINER_MEMORY=1

# Environment
NODE_ENV=production

# Optional: Custom DNS labels (leave empty for auto-generation)
BANKING_ASSISTANT_DNS_LABEL=
BANKING_BROKERAGE_DNS_LABEL=
